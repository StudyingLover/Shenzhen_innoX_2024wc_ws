{
    "name": "Shenzhen-innoX-2024wc",
    "image": "wzx1210/innox2024_wc:v1.0.1",
    "runArgs": [
        "--init",
        "--network=host",
        "--user=root",
        "--shm-size=2g",
        // "--device=/dev/robomaster:/dev/robomaster" （如果你的电脑里没有此设备，请注释此命令，否则导致无法启动。--device=本机逻辑设备名[按实际设置]:容器逻辑设备名[不要改动]）
        // "--device=/dev/video0:/dev/video0"   （同上）
    ],
    "forwardPorts": [
        6080
    ],
    "portsAttributes": {
        "6080": {
            "label": "Web VNC"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
				"ms-python.python",
				"ms-iot.vscode-ros",
				"twxs.cmake",
				"MS-CEINTL.vscode-language-pack-zh-hans",
				"yzhang.markdown-all-in-one"
			]
        }
    }
    // "postStartCommand": ["/usr/local/share/desktop-init.sh"]
}